generator client {
  provider = "prisma-client-js"

  previewFeatures = ["fullTextSearchPostgres"]
  binaryTargets   = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RateLimiterFlexible {
  key    String    @id
  points Int
