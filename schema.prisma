enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELED
  REFUNDED
}

enum RefundStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum PaymentType {
  FULL
  DEPOSIT
  INSTALLMENT
}

enum PaymentMethod {
  CARD
  BANK_TRANSFER
  WALLET
}

model Payment {
  id     String  @id @default(uuid())
  userId String?
  user   User?   @relation(fields: [userId], references: [uid])

  // Project and Visitor relations
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  visitorId String?
  visitor   Visitor? @relation(fields: [visitorId], references: [id])

  // Stripe related fields
  stripePaymentIntentId String? @unique
  stripeSessionId       String? @unique
  stripeCustomerId      String?

  // Payment details
  amount        Int // Amount in cents
  currency      String        @default("usd")
  status        PaymentStatus @default(PENDING)
  paymentMethod PaymentMethod @default(CARD)

  // Payment type and breakdown (for partial/deposit payments)
  paymentType         PaymentType @default(FULL)
  depositPercentage   Decimal?    @db.Decimal(5, 2) // e.g., 25.00 for 25%
  fullProjectAmount   Decimal?    @db.Decimal(10, 2) // Full project amount in dollars for reference

  // Refund tracking
  totalRefundedAmount Decimal?    @default(0) @db.Decimal(10, 2) // Sum of all refunds for this payment
  lastRefundedAt      DateTime? // Last refund timestamp

  // Client information
  clientEmail String
  clientName  String?
  clientPhone String?

  // Payment metadata
  description String?
  metadata    Json?

  // Idempotency and webhook tracking (for reliability)
  lastWebhookEventId     String?   // Last Stripe event ID processed
  webhookEventsProcessed String[]  @default([]) // All event IDs processed
  lastCheckedAt          DateTime? // Last time we verified with Stripe
  webhookRetryCount      Int       @default(0) // Number of webhook retries

  // Timestamps
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  paidAt     DateTime?
  refundedAt DateTime?

  // Soft delete
  trashedBy String?
  trashedAt DateTime?

  // Relations
  verificationLogs PaymentVerificationLog[]
  refunds          Refund[]

  @@index([userId])
  @@index([projectId])
  @@index([visitorId])
  @@index([stripePaymentIntentId])
  @@index([stripeSessionId])
  @@index([clientEmail])
  @@index([status])
  @@index([createdAt])
  @@index([trashedAt])
  @@index([trashedBy])
  @@index([lastCheckedAt])
}

// Payment Verification Log - Tracks all payment status verifications
model PaymentVerificationLog {
  id String @id @default(uuid())

  paymentId String
  payment   Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  verifiedBy   String // "webhook" | "api_check" | "cron" | "manual"
  stripeStatus String // What Stripe says (e.g., "paid", "succeeded")
  ourStatus    String // What our DB says (e.g., "SUCCEEDED", "PENDING")
  matched      Boolean // Do they match?
  eventId      String? // Stripe event ID if from webhook

  createdAt DateTime @default(now())

  @@index([paymentId])
  @@index([verifiedBy])
  @@index([createdAt])
  @@index([matched])
}

// Refund Model - Tracks all refunds processed for payments
model Refund {
  id String @id @default(uuid())

  // Relations
  paymentId  String
  payment    Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  projectId  String
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  refundedBy String // Admin UID who processed the refund
  admin      User    @relation(fields: [refundedBy], references: [uid])

  // Refund details
  amount Decimal       @db.Decimal(10, 2) // Refund amount in dollars
  reason String?       @db.Text // Optional reason for refund
  status RefundStatus  @default(PENDING)

  // Stripe tracking
  stripeRefundId String? @unique

  // Additional info
  notes String? @db.Text // Admin notes

  // Timestamps
  createdAt   DateTime  @default(now())
  processedAt DateTime? // When refund completed in Stripe

  @@index([paymentId])
  @@index([projectId])
  @@index([refundedBy])
  @@index([status])
  @@index([createdAt])
}

