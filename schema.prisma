enum StripeAccountStatus {
  NOT_CONNECTED    // No Stripe account connected
  PENDING          // Stripe Connect account created but not fully onboarded
  ACTIVE           // Fully verified and can receive payouts
  RESTRICTED       // Account restricted by Stripe
  DISABLED         // Account disabled
}

enum PayoutStatus {
  PENDING          // Payout initiated but not processed
  PROCESSING       // Being processed by Stripe
  PAID             // Successfully paid to freelancer
  FAILED           // Payout failed
  CANCELLED        // Payout cancelled by admin
}

enum PayoutType {
  MILESTONE        // Payment for completing a milestone
  PROJECT          // Payment for completing entire project
  BONUS            // Bonus payment
  MANUAL           // Manual payment by admin
}

model FreelancerPayout {
  id String @id @default(uuid())

  // Relations
  freelancerId String
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id], onDelete: Cascade)
  
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  milestoneId String?
  milestone   Milestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)
  
  initiatedBy String // Admin UID who initiated the payout
  admin       User   @relation(fields: [initiatedBy], references: [uid])

  // Payout details
  amount      Decimal     @db.Decimal(10, 2) // Amount in dollars
  currency    String      @default("usd")
  status      PayoutStatus @default(PENDING)
  payoutType  PayoutType  @default(MANUAL)
  
  // Stripe tracking
  stripeTransferId String? @unique // Stripe transfer ID
  stripePayoutId   String? @unique // Stripe payout ID
  
  // Additional info
  description String? @db.Text
  notes       String? @db.Text // Admin notes
  
  // Failure tracking
  failureReason String? @db.Text
  failureCode   String?
  retryCount    Int     @default(0)
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  processedAt DateTime? // When payout completed in Stripe
  paidAt      DateTime? // When funds arrived in freelancer's account
  
  @@index([freelancerId])
  @@index([projectId])
  @@index([milestoneId])
  @@index([initiatedBy])
  @@index([status])
  @@index([payoutType])
  @@index([createdAt])
  @@index([stripeTransferId])
  @@index([stripePayoutId])
}

